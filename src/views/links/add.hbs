<div class="container p-4">
    <div class="row">
        <div class="col-md-4 ">
            <div class="card">
                <div class="card-bady">
                    <form action="" method="POST">
                        <div class="form-group">
                            <label for="">REGISTRAR</label>
                        </div>
                        <div class="form-group">
                            <label for="">nombre</label>
                            <input class="form-control" type="text" name="nombre" id="">
                        </div>
                        <div class="form-group">
                            <label for="">correo</label>
                            <input class="form-control" type="type" name="correo" id="">
                        </div>
                         <div class="form-group">
                            <label for="">telefono</label>
                            <input class="form-control" type="type" name="telefono" id="">
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-warning btn-block">agregar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-8 ">
            <label for="">USUARIOS</label>
            <div class="card-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">id</th>
                            <th scope="col">nombre</th>
                            <th scope="col">correo</th>
                            <th scope="col">telefono</th>
                            <th scope="col">opciones</th>

                        </tr>
                    </thead>
                    <tbody>
                        {{#each usua}}
                        <tr>
                            <th scope="row">{{id}}</th>
                            <td>{{nombre}}</td>
                            <td>{{correo}}</td>
                            <td>{{telefono}}</td>
                            <td>
                                <a href="delete/{{id}}" class="btn btn-warning">eliminar</a>
                                <a href="" class="btn btn-info">modificar</a>        
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>